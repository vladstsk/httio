{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "changelogPreset": "angular",
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore: release"
    }
  },
  "ignoreChanges": [
    "**/tests/**",
    "**/*.md"
  ],
  "npmClient": "npm",
  "packages": [
    "packages/*"
  ],
  "version": "independent"
}
